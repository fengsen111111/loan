.container {
  min-height: 100vh;
  background: #F6F7FB;
}
.container > .content {
  padding: 4vw;
}
.container > .content > .list {
  height: 12vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  padding: 0 4vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4vw;
}
.container > .content > .list > .left {
  display: flex;
  align-items: center;
  font-weight: bold;
  font-size: 3.47vw;
  color: #333333;
}
.container > .content > .list > .left > image {
  max-width: 5.33vw;
  max-height: 5.33vw;
  margin-right: 5vw;
}
.container > .content > .list > .right {
  display: flex;
  align-items: center;
}
.container > .content > .list > .right > .type {
  /* display: flex;
  align-items: center;
  flex-direction: column; */
  text-align: right;
  justify-content: flex-end;
  font-weight: bold;
  font-size: 2.67vw;
  color: #FF8177;
  margin-right: 5vw;
}
.container > .content > .list > .right > .type > .text {
  font-weight: 400;
  font-size: 2.67vw;
  color: #999999;
}