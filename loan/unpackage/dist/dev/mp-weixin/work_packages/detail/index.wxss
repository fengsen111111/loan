.container {
  min-height: 100vh;
  background: #F6F7FB;
}
.container > .content {
  padding: 2.67vw 4vw;
}
.container > .content > .option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 3.2vw;
}
.container > .content > .option > .left {
  width: 42.67vw;
  height: 8vw;
  background: #109181;
  border-radius: 4vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 3.47vw;
  color: #FFFFFF;
}
.container > .content > .option > .right {
  width: 42.67vw;
  height: 8vw;
  background: #999999;
  border-radius: 4vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 3.47vw;
  color: #FFFFFF;
}
.container > .content > .info {
  padding: 2.67vw 8vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
}
.container > .content > .info > .item {
  display: flex;
  align-items: center;
  font-size: 3.2vw;
  color: #666666;
  margin-bottom: 4vw;
}
.container > .content > .info > .item > image {
  width: 5.33vw;
  height: 5.33vw;
  margin-left: 5vw;
}
.container > .content > .info > .item:last-child {
  margin-bottom: 0;
}
.container > .content > .info > .item > .label {
  width: 30vw;
  color: #333333;
}