.container > .mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 98;
}
.container > .notice_popup {
  position: fixed;
  width: 76.26vw;
  padding: 2.8vw 3.87vw 4.4vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
}
.container > .notice_popup .html_content {
  word-break: break-all;
}
.container > .notice_popup > .head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2.8vw;
  font-weight: bold;
  font-size: 4.27vw;
  color: #333333;
}
.container > .content {
  padding: 0 4vw;
  position: relative;
}
.container > .content > .option {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #FFFFFF;
  border-radius: 1.33vw;
  padding: 3.07vw 0;
}
.container > .content > .option > .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 3.2vw;
  color: #333333;
  position: relative;
}
.container > .content > .option > .item > image {
  width: 7vw;
  height: 7vw;
  margin-bottom: 1vw;
}
.container > .content > .option > .item > .tips {
  background: #FF8177;
  border-radius: 1.73vw;
  padding: 0.53vw 0.76vw;
  font-weight: bold;
  font-size: 2.67vw;
  color: #FFFFFF;
  position: absolute;
  right: -2vw;
  top: -2vw;
}
.container > .content .notice {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 3.33vw 2.67vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  margin: 4vw 0;
}
.container > .content .notice .type {
  width: 10.67vw;
  height: 5.33vw;
  border-radius: 0.8vw;
  border: 1px solid #F97E39;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 3.47vw;
  color: #F97E39;
}
.container > .content .notice .title {
  flex: 1;
  padding: 0 2.8vw;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 3.47vw;
  color: #333333;
}
.container > .content .banner {
  height: 31.87vw;
  margin-top: 4vw;
}
.container > .content .banner image {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 1.33vw;
}
.container > .navbar {
  padding: 0 4vw;
  display: flex;
  align-items: center;
  justify-content: center;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 20;
  color: #FFFFFF;
}
.container > .bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}
.container > .bg > image {
  width: 100%;
  height: 100%;
}