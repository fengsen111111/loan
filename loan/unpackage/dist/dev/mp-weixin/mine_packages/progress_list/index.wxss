.container {
  min-height: 100vh;
  background: #F6F7FB;
}
.container > .content {
  padding: 4vw;
}
.container > .content > .empty {
  position: absolute;
  top: 50vw;
  left: 50%;
  transform: translateX(-50%);
  font-weight: bold;
  font-size: 3.2vw;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.container > .content > .empty > image {
  width: 36vw;
  height: 24vw;
  margin-bottom: 3.2vw;
}
.container > .content .list {
  background: #FFFFFF;
  border-radius: 1.33vw;
  padding-bottom: 2.8vw;
  margin-bottom: 4vw;
}
.container > .content .list > .con {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 2.8vw;
  padding: 0 4vw;
}
.container > .content .list > .con > .rightText {
  font-size: 3.2vw;
  color: #0055ff;
  text-decoration: underline;
}
.container > .content .list > .con > .left {
  display: flex;
  align-items: center;
  font-size: 3.2vw;
  color: #666666;
}
.container > .content .list > .con > .left > .label {
  width: 22vw;
  color: #333333;
}
.container > .content .list > .con > .btn {
  font-weight: bold;
  font-size: 3.47vw;
  color: #1592E6;
}
.container > .content .list > .con > .right {
  width: 16vw;
  height: 5.33vw;
  border-radius: 1.33vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 3.2vw;
  color: #FFFFFF;
}
.container > .content .list > .title {
  padding: 4vw 2.67vw;
  border-bottom: solid 1px #999999;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container > .content .list > .title > .left {
  display: flex;
  align-items: center;
  font-size: 3.2vw;
  color: #666666;
}
.container > .content .list > .title > .left > .type {
  padding: 0 2.67vw;
  border-radius: 0.8vw;
  font-weight: bold;
  font-size: 2.67vw;
  color: #F97E39;
  margin-left: 2.33vw;
}
.container > .content .list > .title > .left > .info {
  width: 17vw;
  font-weight: bold;
  font-size: 4vw;
  color: #333333;
}
.container > .content .list > .title > .right {
  display: flex;
  align-items: flex-end;
  font-size: 3.2vw;
  color: #FF8177;
}
.container > .content > .search {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 4.53vw;
  margin-bottom: 5.33vw;
}
.container > .content > .search > .left {
  display: flex;
  align-items: center;
  border-right: solid 1px #999999;
  padding: 0 1.33vw 0 2.67vw;
  font-weight: 400;
  font-size: 3.2vw;
  color: #333333;
}
.container > .content > .search > .search_btn {
  width: 13.33vw;
  height: 8vw;
  background: #F97E39;
  border-radius: 4vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 3.47vw;
  color: #FFFFFF;
}
.inputClass {
  font-weight: 400;
  font-size: 3.2vw;
  color: #999999;
}
.picker-selected {
  height: 20vw;
}
.picker-selected:before {
  content: "";
  top: 0;
  position: absolute;
  border: none;
}
.picker-selected::after {
  content: "";
  bottom: 0;
  position: absolute;
  border: none;
}
.mask {
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  z-index: 98;
}
.picker {
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 99;
  background: #FFFFFF;
}
.picker > .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 3vw 4vw;
  font-weight: bold;
  font-size: 4vw;
  color: #333333;
}
.picker > .title > .cancel {
  font-size: 3.75vw;
  color: #666666;
}
.picker > .title > .confirm {
  font-size: 3.75vw;
  color: #109181;
}
.picker .item {
  display: flex;
  align-items: center;
  justify-content: center;
}