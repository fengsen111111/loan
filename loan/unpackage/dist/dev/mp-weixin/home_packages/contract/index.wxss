.container {
  min-height: 100vh;
  background: #F6F7FB;
}
.container .tips_popup {
  position: fixed;
  bottom: 12vh;
  left: 50%;
  transform: translateX(-50%);
  width: 54.13vw;
  height: 8vw;
  background: rgba(102, 102, 102, 0.8);
  border-radius: 1.33vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 3.47vw;
  color: #FFFFFF;
}
.container > .autograph {
  height: 40vw;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 4.8vw;
  color: #999999;
  position: relative;
}
.container > .autograph > image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: #FFFFFF;
}
.container > .content {
  margin: 4vw 0;
  padding: 2.67vw 6.4vw;
  background: #FFFFFF;
}
.container > .content > .item {
  display: flex;
  align-items: center;
  margin-bottom: 4.3vw;
  font-weight: 500;
  font-size: 3.2vw;
  color: #333333;
}
.container > .content > .item:last-child {
  margin-bottom: 0;
}
.container > .content > .item > .label {
  width: 25vw;
}