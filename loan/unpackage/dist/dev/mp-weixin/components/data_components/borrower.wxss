.borrower > .content {
  padding: 4vw;
  background: #FFFFFF;
  margin-bottom: 2.67vw;
}
.borrower > .content > .option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 5.6vw;
}
.borrower > .content > .option > .add_item {
  width: 40vw;
  height: 8vw;
  border-radius: 1.33vw;
  border: 1px dotted #999999;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 3.2vw;
  color: #999999;
}
.borrower > .content > .table_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 5.2vw;
  padding: 0 2.67vw;
}
.borrower > .content > .table_item > .item {
  font-size: 2.67vw;
  color: #333333;
  text-align: center;
}
.borrower > .content > .table_item > .item:nth-child(1) {
  width: 16.4vw;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.borrower > .content > .table_item > .item:nth-child(2) {
  width: 14vw;
}
.borrower > .content > .table_item > .item:nth-child(3) {
  width: 16vw;
  word-break: break-all;
  text-align: left;
}
.borrower > .content > .table_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.4vw 2.67vw;
  border-bottom: solid 1px #999999;
  margin-top: 3vw;
}
.borrower > .content > .table_title > .item {
  font-size: 3.2vw;
  color: #333333;
}
.borrower > .content > .label {
  font-weight: bold;
  font-size: 3.73vw;
  color: #333333;
  display: flex;
  align-items: center;
}
.borrower > .content > .label::before {
  content: "";
  width: 1.07vw;
  height: 5.33vw;
  background: #F97E39;
  border-radius: 1.33vw;
  margin-right: 1.47vw;
}
.borrower > .head {
  background: #FFFFFF;
  margin: 2.67vw 0;
  padding: 2.67vw 4vw;
}
.borrower > .head > .top_dot {
  width: calc(100% - 8.14vw);
  padding: 0 4.07vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.borrower > .head > .top_dot > .line {
  width: 8vw;
  height: 0.53vw;
  background: #999999;
  border-radius: 1.33vw;
}
.borrower > .head > .top_dot > .dot {
  width: 2.67vw;
  height: 2.67vw;
  background: #999999;
  border-radius: 1.33vw;
}
.borrower > .head > .top_dot > .current {
  background: #F97E39;
}
.borrower > .head > .top_dot > .finish {
  background: #109181;
}
.borrower > .head > .bottom_text {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 400;
  font-size: 2.67vw;
  color: #999999;
}
.borrower > .head > .bottom_text > .current {
  color: #F97E39;
}
.borrower > .head > .bottom_text > .finish {
  color: #109181;
}