.container > .tips_popup {
  position: fixed;
  min-width: 60vw;
  max-width: 80vw;
  padding: 1.6vw 0;
  display: flex;
  justify-content: center;
  background: rgba(102, 102, 102, 0.8);
  border-radius: 1.33vw;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
  font-weight: bold;
  font-size: 3.47vw;
  color: #FFFFFF;
}
.container > .option {
  position: relative;
  padding: 0 4vw;
}
.container > .option > .item {
  padding: 0 2.67vw 0 4vw;
  height: 12vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4vw;
}
.container > .option > .item > .left {
  display: flex;
  align-items: center;
}
.container > .option > .item > .left > .title {
  margin-left: 4vw;
  font-weight: bold;
  font-size: 3.47vw;
  color: #333333;
}
.container > .option > .item > .left > image {
  width: 7vw;
  height: 7vw;
}
.container > .tips {
  width: 100%;
  height: 46.88vw;
  position: relative;
  margin-top: 4vw;
  display: flex;
  align-items: center;
  margin-bottom: 2.13vw;
}
.container > .tips > .text {
  padding-left: 8vw;
}
.container > .tips > .text > .big_text {
  font-weight: bold;
  font-size: 5.33vw;
  color: #FFFFFF;
  margin-bottom: 1.73vw;
}
.container > .tips > .text > .small_text {
  font-size: 3.47vw;
  color: #FFF7F3;
  opacity: 0.8;
}
.container > .tips > image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.container > .head {
  width: 92vw;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  font-size: 4.8vw;
  color: #FFFFFF;
}
.container > .bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}
.container > .bg > image {
  width: 100%;
  height: 100%;
}