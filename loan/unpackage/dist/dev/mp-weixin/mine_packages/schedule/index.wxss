.container {
  min-height: 100vh;
  background: #F6F7FB;
}
.container .tips_popup {
  position: fixed;
  bottom: 12vh;
  left: 50%;
  transform: translateX(-50%);
  width: 54.13vw;
  height: 8vw;
  background: rgba(102, 102, 102, 0.8);
  border-radius: 1.33vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 3.47vw;
  color: #FFFFFF;
}
.container > .content {
  padding: 4vw;
}
.container > .content > .confirm {
  width: 80vw;
  height: 8vw;
  background: #F97E39;
  border-radius: 4vw;
  margin: 0 auto;
  font-weight: bold;
  font-size: 3.47vw;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container > .content > .info {
  background: #FFFFFF;
  border-radius: 1.33vw;
  margin: 2.67vw 0 4vw;
}
.container > .content > .info > .item {
  padding: 0 2.67vw 2.67vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container > .content > .info > .item > .value {
  flex: 1;
  padding: 2.67vw 0;
  border-bottom: solid 1px #666666;
}
.container > .content > .info > .item > .value .inputClass {
  font-size: 3.2vw;
  color: #999999;
}
.container > .content > .info > .item > .label {
  width: 20vw;
  font-weight: 500;
  font-size: 3.2vw;
  color: #333333;
  display: flex;
  align-items: center;
  margin-right: 5vw;
}
.container > .content > .info > .item > .label:before {
  content: "*";
  font-weight: 500;
  font-size: 3.2vw;
  color: #FF8177;
  margin-right: 1.6vw;
}
.container > .content > .option {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.container > .content > .option > .item {
  width: 21.33vw;
  height: 8vw;
  background: #FFFFFF;
  border-radius: 4vw;
  font-weight: 400;
  font-size: 3.47vw;
  color: #666666;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container > .content > .option > .active {
  background: #F97E39;
  color: #FFFFFF;
}