.container > .open_popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
  width: 84vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  padding: 2.67vw;
}
.container > .open_popup > .title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: bold;
  font-size: 4.27vw;
  color: #333333;
}
.container > .open_popup > image {
  width: 41.89vw;
  height: 31.67vw;
  margin: 3.73vw auto 2.67vw;
  display: block;
}
.container > .open_popup > .text {
  text-align: center;
  font-weight: bold;
  font-size: 3.2vw;
  color: #333333;
  margin-bottom: 3.47vw;
}
.container > .open_popup > .confirm {
  height: 8vw;
  background: #F97E39;
  border-radius: 4vw;
  text-align: center;
  line-height: 8vw;
  font-weight: bold;
  font-size: 3.47vw;
  color: #FFFFFF;
}
.container > .mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 98;
}
.container > .content {
  padding: 10vw 4vw 0;
  position: relative;
}
.container > .content > .list {
  height: 12vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  margin-top: 4vw;
  padding: 0 4vw;
  display: flex;
  align-items: center;
}
.container > .content > .list > image {
  width: 5.33vw;
  height: 5.33vw;
  margin-right: 4vw;
}
.container > .content > .list > .title {
  font-weight: bold;
  font-size: 3.47vw;
  color: #333333;
  flex: 1;
}
.container > .content > .option {
  height: 24vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  margin-top: 7.47vw;
}
.container > .content > .option > .item {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  font-weight: bold;
  font-size: 3.2vw;
  color: #333333;
}
.container > .content > .option > .item > .line {
  width: 1px;
  height: 13.33vw;
  background: #333333;
  border-radius: 1.33vw;
}
.container > .content > .option > .item > image {
  width: 5.33vw;
  height: 5.33vw;
}
.container > .content > .option > .item > .text {
  font-weight: 400;
  font-size: 2.67vw;
  color: #333333;
  margin: 1.47vw 0;
}
.container > .content > .userInfo {
  display: flex;
  align-items: center;
}
.container > .content > .userInfo > input {
  margin: 0 1.33vw 0 2.67vw;
  font-weight: bold;
  font-size: 4vw;
  color: #FFFFFF;
}
.container > .content > .userInfo > .avatar {
  width: 17.73vw;
  height: 17.73vw;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container > .content > .userInfo > .avatar > image {
  width: 10.48vw;
  height: 10.48vw;
}
.container > .navbar {
  padding: 0 4vw;
  display: flex;
  align-items: center;
  justify-content: center;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  z-index: 20;
  color: #FFFFFF;
}
.container > .bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}
.container > .bg > image {
  width: 100%;
  height: 100%;
}