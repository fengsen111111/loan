.container {
  min-height: 100vh;
  background: #F6F7FB;
}
.container > .content {
  padding: 2.67vw 4vw;
  background: #FFFFFF;
}
.container > .content > .step {
  display: flex;
}
.container > .content > .step > .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 57vw;
  margin-left: 1.33vw;
}
.container > .content > .step > .right > .item {
  font-size: 2.67vw;
  margin-bottom: 40px;
}
.container > .content > .step > .right > .item:last-child {
  margin-bottom: 0;
}
.container > .content > .step > .right > .item > .title {
  font-weight: bold;
  font-size: 3.47vw;
}
.container > .content > .step .left {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
}
.container > .content > .step .left .line {
  width: 0.53vw;
  min-height: 8vw;
  background: #999999;
  border-radius: 0.27vw;
}
.container > .content > .step .left .item {
  width: 4vw;
  height: 4vw;
  background: #999999;
  border-radius: 50%;
  font-weight: 400;
  font-size: 2.67vw;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container > .content > .label {
  font-weight: bold;
  font-size: 3.73vw;
  color: #333333;
  display: flex;
  align-items: center;
  margin-bottom: 4vw;
}
.container > .content > .label::before {
  content: "";
  width: 1.07vw;
  height: 5.33vw;
  background: #F97E39;
  border-radius: 1.33vw;
  margin-right: 1.47vw;
}
.container .infoBox {
  padding: 2.67vw 8vw;
  background: #FFFFFF;
  border-radius: 1.33vw;
  margin: 4vw 0 2vw;
}
.container .infoBox > .more {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  font-size: 3.2vw;
  color: #FF8177;
  margin-top: 6.13vw;
}
.container .infoBox > .item {
  display: flex;
  align-items: center;
  font-size: 3.2vw;
  color: #666666;
  margin-bottom: 4vw;
}
.container .infoBox > .item > image {
  width: 5.33vw;
  height: 5.33vw;
  margin-left: 5vw;
}
.container .infoBox > .item:last-child {
  margin-bottom: 0;
}
.container .infoBox > .item > .label {
  width: 30vw;
  color: #333333;
}