.container {
  min-height: 100vh;
  background: #F6F7FB;
}
.container > .content {
  padding: 1vw 2vw 1vw 5vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #FFFFFF;
  border-radius: 1.33vh;
  margin: 2.67vh;
}
.container > .content > .left {
  height: 100%;
  font-size: 15vw;
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  position: relative;
  background: #e7e7e7;
}
.container > .content > .left > text {
  text-align: justify;
  text-align-last: justify;
  color: rgba(153, 153, 153, 0.4);
}
.container > .content > .left > canvas {
  position: absolute;
  width: 100%;
  height: 100%;
}
.container > .content > .right {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 20vh;
  margin-left: 20px;
}
.container > .content > .right > .tips {
  color: #FFC4CC;
  font-size: 3.2vh;
}
.container > .content > .right > .clear {
  width: 100%;
  height: 8vh;
  background: #f4f4f4;
  color: #999999;
  border-radius: 4vh;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20vw;
}
.container > .content > .right > .save {
  width: 100%;
  height: 8vh;
  background: #F97E39;
  color: #FFFFFF;
  border-radius: 4vh;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 4vh;
}
.container > .navbar {
  padding: 0 4vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  left: 0;
  background: #FFFFFF;
  z-index: 20;
}