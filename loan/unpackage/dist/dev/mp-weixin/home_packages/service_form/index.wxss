.container {
  min-height: 100vh;
  background: #F6F7FB;
}
.container .tips_popup {
  position: fixed;
  bottom: 12vh;
  left: 50%;
  transform: translateX(-50%);
  width: 54.13vw;
  height: 8vw;
  background: rgba(102, 102, 102, 0.8);
  border-radius: 1.33vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 3.47vw;
  color: #FFFFFF;
}
.container > .content {
  padding: 4vw;
  background: #FFFFFF;
}
.container > .content > .idcard {
  margin: 4vw 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.container > .content > .idcard > .item {
  width: 40.8vw;
  height: 22.93vw;
  border-radius: 1.33vw;
  border: 1px dotted #999999;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-weight: bold;
  font-size: 3.2vw;
  color: #999999;
  position: relative;
  overflow: hidden;
}
.container > .content > .idcard > .item > image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.container > .content > .label {
  font-weight: bold;
  font-size: 3.73vw;
  color: #333333;
  display: flex;
  align-items: center;
  margin-bottom: 4vw;
}
.container > .content > .label::before {
  content: "";
  width: 1.07vw;
  height: 5.33vw;
  background: #F97E39;
  border-radius: 1.33vw;
  margin-right: 1.47vw;
}
.container > .content > .info_item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 8.4vw;
}
.container > .content > .info_item:last-child {
  margin-bottom: 0;
}
.container > .content > .info_item > .value {
  width: 66.67vw;
  font-size: 3.2vw;
  color: #333333;
  padding-bottom: 2.8vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: solid 1px #666666;
}
.container > .content > .info_item > .value > .getCode {
  width: 23.2vw;
  height: 5.33vw;
  border-radius: 1.33vw;
  border: 1px solid #F97E39;
  font-weight: bold;
  font-size: 3.2vw;
  color: #F97E39;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container > .content > .info_item > .label {
  font-size: 3.2vw;
  color: #333333;
}
.container > .content > .info_item > .label:before {
  content: "*";
  font-size: 3.2vw;
  color: #FF8177;
  margin-right: 1.6vw;
}